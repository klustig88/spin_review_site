<html>
<head>
	<title>Search By</title>

		  <script src="/magic360/magic360.js" type="text/javascript"></script>
<link rel="stylesheet" type="text/css" href="/magic360/magic360.css">
</head>
<body>

  <div id='content'>

      <div class="header">

        <a href="https://www.snap36.com"><img src="https://cdn2.hubspot.net/hub/29492/file-705818670-jpg/TradeShows/IR_B2B/landingpagehead.jpg"></a>
          
      </div>

      <div class="navigation">
          
          <a href="/approveditems/0"><div>Approved</div></a>
          <a href="/rejecteditems/0"><div>Rejected</div></a>
          <a href="/notreviewed/0"><div>Not Reviewed</div></a>
          <a href="/gallery"><div>Status</div></a>
          <div><b>Find By ID</b></div>



      </div>


    	<div class='outline'>

    	
    			Product Code:  <%= @product.name %>



             <div class="viewer">
                <a href="/img/<%= @product.name %>/<%= @product.name %>-big-01-01.jpg" class="Magic360" data-magic360-options="columns: <%= @product.column %>; rows: <%= @product.row %>; filename: <%= @product.name %>-small-{row}-{col}.jpg"; large-filename: "<%= @product.name %>-big-{row}-{col}.jpg;" ><img src="/img/<%= @product.name %>/<%= @product.name %>-small-01-01.jpg"/></a> 
                

             </div> 

                      <div class='decision'>
             <form action="/spins/<%= @product.id %>/approval" method="post" name="decision">
              


                <% if @product.approval == "[\"approved\"]"  %>
                
                
                <%= erb :_approvedform %>

                 <% elsif @product.approval == nil %>
                 
                <%= erb :_form %>
             

                  <% else  %>

                   <%=  erb :_rejectedform %>


                  
              


              <% end %>

              <br>

             
                <input type="submit" value="Submit">
                </form>
                </div>
            </div>









    	</div>
  </div>

</body>
</html>
